{
  "name": "share_canvas_in_thread",
  "description": "Share a canvas in thread",
  "schema_reference": "slack#/functions/share_canvas_in_thread.md",
  "schema_id": "Schema.slack.functions.ShareCanvasInThread",
  "category": "Canvas",
  "scopes": [
    "chat:write",
    "im:write",
    "chat:write.public",
    "groups:write",
    "canvases:read",
    "canvases:write"
  ],
  "input_parameters": [
    {
      "name": "canvas_id",
      "type": "Schema.slack.types.canvas_id",
      "description": "The ID of the canvas to share",
      "required": true
    },
    {
      "name": "message_context",
      "type": "Schema.slack.types.message_context",
      "description": "The message to reply to",
      "required": true
    },
    {
      "name": "access_level",
      "type": "Schema.types.string",
